

@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Role</h2>

@Html.ActionLink("List Roles", "Index") | @Html.ActionLink("Manage User Role", "ManageUserRoles")
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <hr />
    <hr />
    <div style=" background-color:aqua ">
        <div>
            <span><strong>Role Name....:</strong></span>@Html.TextBoxFor(model => model.Name)
        </div>
    </div>
    <hr />
    <hr />
    <input type="submit" value="Save" class="btn btn-lg btn-success " />
}
